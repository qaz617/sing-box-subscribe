{
    "log": {
        "level": "info",
        "timestamp": true
    },
    "dns": {
        "servers": [
            {
                "type": "tcp",
                "tag": "dns_proxy",
                "detour": "proxy",
                "server": "1.1.1.1"
            },
            {
                "type": "https",
                "tag": "dns_direct",
                "detour": "direct",
                "server": "223.5.5.5"
            },
            {
                "tag": "dns_resolver",
                "type": "udp",
                "server": "223.5.5.5",
                "detour": "direct"
            },
            {
                "type": "predefined",
                "tag": "dns_success",
                "responses": [
                    {
                        "rcode": "NOERROR"
                    }
                ]
            },
            {
                "type": "predefined",
                "tag": "dns_refused",
                "responses": [
                    {
                        "rcode": "REFUSED"
                    }
                ]
            },
            {
                "tag": "dns_fakeip",
                "type": "fakeip",
                "inet4_range": "198.18.0.0/15"
            }
        ],
        "rules": [
            {
                "rule_set": "geosite-geolocation-!cn",
                "query_type": [
                    "A",
                    "AAAA"
                ],
                "server": "dns_fakeip"
            },
            {
                "rule_set": "geosite-geolocation-!cn",
                "query_type": [
                    "CNAME"
                ],
                "server": "dns_proxy"
            },
            {
                "query_type": [
                    "A",
                    "AAAA",
                    "CNAME"
                ],
                "invert": true,
                "server": "dns_refused",
                "action": "route-options",
                "disable_cache": true
            }
        ],
        "final": "dns_direct",
        "independent_cache": true
    },
    "route": {
        "default_domain_resolver": {
            "server": "dns_resolver"
        },
        "rule_set": [
            {
              "tag": "geosite-youtube",
              "type": "remote",
              "format": "binary",
              "url": "https://ghp.yeye.moe/https://raw.githubusercontent.com/qaz617/geo-dat/release/geosite_rule_set/geosite-youtube.srs",
              "download_detour": "direct"
            },
            {
              "tag": "geosite-microsoft",
              "type": "remote",
              "format": "binary",
              "url": "https://ghp.yeye.moe/https://raw.githubusercontent.com/qaz617/geo-dat/release/geosite_rule_set/geosite-microsoft.srs",
              "download_detour": "direct"
            },
            {
              "tag": "geosite-geolocation-!cn",
              "type": "remote",
              "format": "binary",
              "url": "https://ghp.yeye.moe/https://raw.githubusercontent.com/qaz617/geo-dat/release/geosite_rule_set/geosite-geolocation-!cn.srs",
              "download_detour": "direct"
            },
            {
                "tag": "geosite-category-ads-all",
                "type": "remote",
                "format": "binary",
                "url": "https://ghp.yeye.moe/https://raw.githubusercontent.com/Cats-Team/AdRules/refs/heads/main/adrules-singbox.srs",
                "download_detour": "direct"
            },
            {
              "tag": "geoip-telegram",
              "type": "remote",
              "format": "binary",
              "url": "https://ghp.yeye.moe/https://github.com/MetaCubeX/meta-rules-dat/raw/refs/heads/sing/geo/geoip/telegram.srs",
              "download_detour": "direct"
            },
            {
              "tag": "geoip-cn",
              "type": "remote",
              "format": "binary",
              "url": "https://ghp.yeye.moe/https://github.com/MetaCubeX/meta-rules-dat/raw/refs/heads/sing/geo/geoip/cn.srs",
              "download_detour": "direct"
            }
        ],
        "rules": [
            {
                "inbound": ["tun-in", "mixed-in"],
                "action": "sniff"
            },
            {
                "protocol": "dns",
                "action": "hijack-dns"
            },
            {
                "port": 853,
                "network": "tcp",
                "action": "reject"
            },
            {
                "port": 443,
                "network": "udp",
                "action": "reject"
            },
            {
                "rule_set": "geosite-youtube",
                "outbound": "Youtube"
            },
            {
                "rule_set": "geosite-microsoft",
                "outbound": "Microsoft"
            },
            {
                "rule_set": "geosite-geolocation-!cn",
                "outbound": "proxy"
            },
            {
                "rule_set": "geoip-telegram",
                "outbound": "Telegram"
            },
            {
                "rule_set": "geoip-cn",
                "outbound": "国内"
            },
            {
                "ip_is_private": true,
                "outbound": "direct"
            }
        ],
        "final": "proxy",
        "auto_detect_interface": true
    },
    "inbounds": [
        {
            "type": "tun",
            "tag": "tun-in",
            "address": [
                "172.16.0.1/30"
            ],
            "mtu": 1492,
            "auto_route": true,
            "strict_route": true,
            "stack": "system",
            "platform": {
                "http_proxy": {
                    "enabled": true,
                    "server": "127.0.0.1",
                    "server_port": 7890
                }
            }
        },
        {
            "tag": "mixed-in",
            "type": "mixed",
            "listen": "127.0.0.1",
            "listen_port": 7890
        }
    ],
    "outbounds": [
        {
          "tag": "proxy",
          "type": "selector",
          "interrupt_exist_connections": true,
          "outbounds": [
            "{all}"
          ]
        },
        {
          "tag": "Telegram",
          "type": "selector",
          "interrupt_exist_connections": true,
          "outbounds": [
            "proxy",
            "{all}"
          ]
        },
        {
          "tag": "Youtube",
          "type": "selector",
          "interrupt_exist_connections": true,
          "outbounds": [
            "proxy",
            "{all}"
          ]
        },
        {
          "tag": "Microsoft",
          "type": "selector",
          "interrupt_exist_connections": true,
          "outbounds": [
            "proxy",
            "{all}"
          ]
        },
        {
          "tag": "国内",
          "type": "selector",
          "interrupt_exist_connections": true,
          "outbounds": [
            "direct",
            "{all}"
          ],
          "filter":[
              {"action":"include","keywords":["国内"]}
          ]
        },
        {
            "type": "direct",
            "tag": "direct"
        }
    ],
    "experimental": {
        "cache_file": {
            "enabled": true,
            "path": "cache.db",
            "store_fakeip": true,
            "store_rdrc": true
        },
        "clash_api": {
        "external_controller": "127.0.0.1:9090",
        "external_ui": "ui",
        "external_ui_download_url": "https://ghp.yeye.moe/https://github.com/Zephyruso/zashboard/archive/gh-pages.zip",
        "external_ui_download_detour": "direct",
        "secret": ""
        }
    }
}
